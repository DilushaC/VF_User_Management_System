@model UserManagement.Data.Models.UserRegisterModel

@{
    ViewData["Title"] = "Register User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta charset="utf-8" />
<title>Form Advanced | Attex - Bootstrap 5 Admin & Dashboard Template</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
<meta content="Coderthemes" name="author" />


<div class="row">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Products</a></li>
                        <li class="breadcrumb-item active">Create Product</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Form row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="header">Register User</h3>
                    <br />
                    <form asp-action="RegisterUser" asp-controller="User" method="post" id="RegisterForm">
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="UserName" class="form-label">User Name</label>
                                <input asp-for="UserName" class="form-control round" required />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control round" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control round" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control round" placeholder="Enter your email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone"
                                       type="tel"
                                       class="form-control round"
                                       placeholder="Enter phone number"
                                       pattern="0\d{9}"
                                       title="Phone number must start with 0 and be 10 digits long"
                                       required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="DesignationId" class="form-label">Select Designation</label>
                                <select id="DesignationId"
                                        asp-for="DesignationId"
                                        class="form-control select2"
                                        data-placeholder="Select Designation"
                                        asp-items="ViewBag.Designations">
                                    <option></option>
                                </select>
                                <span asp-validation-for="DesignationId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="PrimaryBranchId" class="form-label">Select Primary Branch</label>
                                <select id="PrimaryBranchId"
                                        asp-for="PrimaryBranchId"
                                        class="form-control select2"
                                        data-placeholder="Select Branch"
                                        asp-items="ViewBag.Branches">
                                    <option></option>
                                </select>
                                <span asp-validation-for="PrimaryBranchId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="PrimaryDepartmentId" class="form-label">Select Primary Department</label>
                                <select id="PrimaryDepartmentId"
                                        asp-for="PrimaryDepartmentId"
                                        class="form-control select2"
                                        data-placeholder="Select Department"
                                        asp-items="ViewBag.Departments">
                                    <option></option>
                                </select>
                                <span asp-validation-for="PrimaryDepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Create User</button>
                    </form>
                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>
</div>
<!-- Load jQuery only ONCE -->
<script src="~/assets/lib/jquery/jquery.min.js"></script>
<script src="~/assets/js/sweetalert2.all.min.js"></script>
<!-- Load Select2 JS -->
<script src="~/assets/vendor/select2/js/select2.min.js"></script>

<script>
    //select branch
    $("#PrimaryBranchId").select2({
        placeholder: "Select Branch",
    });

    //select department
    $("#PrimaryDepartmentId").select2({
        placeholder: "Select Department",
    });

    //select designation
    $("#DesignationId").select2({
        placeholder: "Select Desingation",
    });

    $("#RegisterForm").on("submit", function (e) {
        e.preventDefault(); // Stop default submit
        let form = this;

        Swal.fire({
            title: 'Create User?',
            text: "Are you sure want to create this user?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, Save',
            cancelButtonText: 'Cancel'
        }).then((result) => {

            if (result.isConfirmed) {
                Swal.fire({
                    icon: 'success',
                    title: 'User Created Successfully',
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    form.submit(); 
                });
            }

        });
    });

</script>

