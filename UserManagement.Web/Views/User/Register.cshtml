@model UserManagement.Data.Models.UserRegisterViewModel

@{
    ViewData["Title"] = "Register User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta charset="utf-8" />
<title>Form Advanced | Attex - Bootstrap 5 Admin & Dashboard Template</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
<meta content="Coderthemes" name="author" />


<div class="row">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Products</a></li>
                        <li class="breadcrumb-item active">Create Product</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Form row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="header">Register User</h3>
                    <br />
                    <form>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="UserName" class="form-label">User Name</label>
                                <input asp-for="UserName" class="form-control round" placeholder="" required />
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control round" placeholder="" required />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control round" placeholder="" required />
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control round" placeholder="Enter your email address" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone"
                                       type="tel"
                                       class="form-control round"
                                       placeholder="Enter your phone number"
                                       pattern="0\d{9}"
                                       title="Phone number must start with 0 and be 10 digits long"
                                       required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="PrimaryBranchId" class="form-label">Select Primary Branch</label>
                                <select id="PrimaryBranchId" asp-for="PrimaryBranchId" class="form-control select2" asp-items="ViewBag.Branches">
                                    <option value="">-- Select --</option>
                                </select>
                                <span asp-validation-for="PrimaryBranchId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label asp-for="PrimaryDepartmentId" class="form-label">Select Primary Department</label>
                                <select id="PrimaryDepartmentId" asp-for="PrimaryDepartmentId" class="form-control select2" asp-items="ViewBag.Branches">
                                    <option value="">-- Select --</option>
                                </select>
                                <span asp-validation-for="PrimaryDepartmentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-2">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="customCheck11">
                                <label class="form-check-label" for="customCheck11">Check this custom checkbox</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>

                </div> <!-- end card-body -->
            </div> <!-- end card-->
        </div> <!-- end col -->
    </div>
</div>
<!-- Load jQuery only ONCE -->
<script src="~/assets/lib/jquery/dist/jquery.min.js"></script>

<!-- Load Select2 JS -->
<script src="~/assets/vendor/select2/js/select2.min.js"></script>

<script>
    //select branch
    $("#PrimaryBranchId").select2({
        placeholder: "Select Branch",
        allowClear: true
    });

    //select department
    $("#PrimaryDepartmentId").select2({
        placeholder: "Select Department",
        allowClear: true
    });

    $("#Error").hide();

    function submitLogin() {

        var form = $("#loginForm");

        $.ajax({
            url: form.attr("action"),   // Correct way to get form action URL
            type: "POST",
            data: form.serialize(),
            headers: { "X-Requested-With": "XMLHttpRequest" },
            success: function (response) {

                if (response.success) {

                    Swal.fire({
                        title: 'Are you sure?',
                        text: "Do you want to resolve this complaint?",
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Yes, resolve it!'
                    }).then((result) => {

                        if (result.isConfirmed) {

                            Swal.fire({
                                title: 'Success!',
                                text: 'Complaint resolved successfully.',
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {

                                // After confirmation → submit final action
                                form.attr('action','/ComplaintManageProcess/SubmitAndSendComplain');
                                form.submit();

                            });
                        }
                    });

                } else {
                    $("#Error").show().html(response.message || "Login failed.");
                }
            },
            error: function () {
                $("#Error").show().html("An error occurred.");
            }
        });
    }

</script>

